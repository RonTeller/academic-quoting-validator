# Database connection string
# For local development with SQLite:
DATABASE_URL=sqlite:///./test.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/academic_validator

# Redis connection (required for Celery in production, optional for local dev)
REDIS_URL=redis://localhost:6379/0

# Anthropic API key (required for quote validation)
# Get your key at https://console.anthropic.com
ANTHROPIC_API_KEY=your-api-key-here

# Secret key for JWT tokens (generate a random string)
SECRET_KEY=your-secret-key-here

# Enable debug mode (set to false in production)
DEBUG=true

# Upload directory for PDF files (optional, defaults to ./uploads)
# UPLOAD_DIR=./uploads
